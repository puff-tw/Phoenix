<% if current_user %>
  <% provide(:title, "Dashboard") %>
  <br>
  <br>
  <br>
  <br>
  <div class='row'>
    <div class="col-md-10 col-md-offset-1 text-center">
      <h2>
        Personalised dashboard coming soon!
        <br><br>
        <%= Time.zone.now.strftime('%d/%m/%Y') %>
      </h2>
    </div>
  </div>

<% else %>
  <% provide(:title, "Login") %>
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    <h4 class="text-center;">Login to your account</h4>

    <%= form_for(@sign_in, url: sessions_url) do |form| %>
      <%= render 'layouts/error_messages', object: form.object %>
      <div class="input-group margin-bottom-20 login-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= form.text_field :email_id, class: "form-control", placeholder: "Enter Email ID", required: "true" %>
      </div>
      <div class="input-group margin-bottom-20 login-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= form.password_field :password, class: "form-control", placeholder: "Enter Password", required: true %>
      </div>
      <div class="input-group margin-bottom-20 login-group">
        <%= form.check_box :remember_me %>
        <label class="login_remember_me">&emsp;Remember Me</label>
      </div>
      <%= form.submit "Log In", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
  </div>
<% end %>
