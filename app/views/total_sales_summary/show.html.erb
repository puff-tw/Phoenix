<form name="language_report" id="language_report" action="/total-sales-summary-report">
  <div class="col-md-12">
    <div class="col-md-3">
      <label>Location : </label>

      <select class="form-control select-box" name="location_id" id="location_id">
        <option value="">Select one</option>
        <% @location.each do |c| %>
            <option value="<%= c.id %>"><%= c.alias_name %> :: <%= c.name %></option>
        <% end %>
      </select>
    </div>

    <div class="col-md-3">
      <label>Product : </label>

      <select class="form-control select-box" name="product_id" id="product_id">
        <option value="">Select one</option>
        <% @products.each do |c| %>
            <option value="<%= c.id %>"><%= c.sku %> :: <%= c.name %> :: <%= c.alias_name %></option>
        <% end %>
      </select>
    </div>

    <div class="col-md-2">
      <label>Voucher : </label>

      <select class="form-control select-box" name="voucher_id">
        <option value="">Select one</option>
        <option value="in"> Inventory vouchers In</option>
        <option value="out"> Inventory vouchers Out</option>
      </select>
    </div>

    <div class="col-md-2">
      <label>StartDate : </label>
      <input type="text" name="from_date" id="start_date" class="datetimepicker form-control">
    </div>


    <div class="col-md-2">
      <label>End Date : </label>
      <input type="text" name="to_date" id="end_date" class="datetimepicker form-control">
    </div>
  </div>
  <div class='col-md-12 center-block ' style="margin: 20px;">
    <center>
      <input type="submit" name="language_submit" value="Search" class="btn btn-primary">
      <input type="button" name="language_esport" id="language_export" value="Export" class="btn btn-primary">
      <input type="reset" name="language_reset" value="Reset" class="btn btn-warning">
    </center>
  </div>
</form>


<script>
  $(function () {
    $('.select-box').select2({});
    $('#language_report').submit(function (event) {

      if ($('#location_id').val() == '') {
        alert('Please select The Location..');
        event.preventDefault();
        return;
      }

      if ($('#start_date').val() == '') {
        alert('Please select The Startdate..');
        event.preventDefault();
        return;
      }
      $('#language_report').attr('action', "/total-sales-summary-report")
      $('#language_report')[0].submit();
      //return false;
    });
    $('#language_export').click(function () {

      

      if ($('#location_id').val() == '') {
        alert('Please select The Location..');
        event.preventDefault();
        return;
      }

      if ($('#start_date').val() == '') {
        alert('Please select The Startdate..');
        event.preventDefault();
        return;
      }

      $('#language_report').attr('action', "/total-sales-summary-report.xls")
      $('#language_report')[0].submit();

    });


  });
</script>
